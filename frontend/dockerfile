# Use official Node image
FROM node:18-alpine

# Create app directory
WORKDIR /app

# Copy only package.json and package-lock.json first (for caching)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy rest of the code
COPY . .

# Make scripts executable (in case any custom shell script is used)
RUN chmod +x ./node_modules/.bin/* || true

# Run the build
RUN npm run build

# Default command
CMD ["npm", "start"]
